{
  "declaration": false,
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "tailwind.config.ts"],
  "exclude": [],
  "compilerOptions": {
    "target": "ES6",
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@pages/*": ["./src/pages/*"],
      "@widgets/*": ["./src/widgets/*"],
      "@features/*": ["./src/features/*"],
      "@entities/*": ["./src/entities/*"],
      "@shared/*": ["./src/shared/*"]
    },
  }
}
